<div class="row">
  <div class="col-12">
    <table id="cart" class="table table-hover table-condensed">
      <thead>
          <tr>
              <th style="width:10%">Product</th>
              <th style="width:10%">Price</th>
              <th style="width:8%"class="text-center">Quantity</th>
              <th style="width:22%" class="text-center">Subtotal</th>
          </tr>
      </thead>
      <tbody>
        <% if @order_items.size > 0 %>
         <% @order_items.each do |item| %>
          <tr>
            <td data-th="Product" style="font-size:20px"><%= item.product.name %></td>
            <td data-th="Price" style="font-size:20px">$<%= item.product.price %></td>
            <td data-th="Quantity" style="text-align:center;font-size:20px">
                <%= item.quantity.to_i %>
            </td>
            <td data-th="Subtotal" class="text-center" style="font-size:20px"><%= item.total_price %></td>
          </tr>
        <% end %>
        <% end %>
      </tbody>
      <tfoot>
          <tr>
              <td colspan="3" class="hidden-xs"></td>
              <td class="hidden-xs text-center" style="font-size:25px"><strong>Total $<%= current_user.subtotal %></strong></td>
          </tr>
      </tfoot>
      </table>
  </div>
</div>