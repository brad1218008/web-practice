        <img class="media-left" width="70%" alt="Image" src="<%= @thisGood[:image_url] %>" style="margin-right: 50px;">
        <div class="media-body">
          
          <p class="card-text" style="font-size:30px;"><%= @thisGood[:description] %></p>
          <p class="card-subtitle" style="font-size:25px;">$<%= @thisGood[:price] %></p>
          <% if user_signed_in? %>
            <%= form_for(@order_item, remote: true) do |f| %>
              <%= f.hidden_field :product_id, value: @thisGood[:id]%>
              <div class="form-group">
                <%= f.number_field :quantity, value: 1,min: 1, class: 'form-control text-center',style:"width:100px;margin-top:50px;" %>
              </div>
              <%= f.submit "Add to Cart", class: "btn btn-primary btn-sm" %>
            <% end %>
          <% else %>
            <a href="<%= new_user_session_path%>"><button class="btn btn-primary btn-sm" style="margin-top:20px;">Add to Cart</button></a>
          <% end %>
